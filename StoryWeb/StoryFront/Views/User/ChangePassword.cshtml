@using ObjectModel.Dtos
@{
    ViewData["Title"] = "Change Password";
    var currentUser = ViewBag.User as UserDTO;
    var mess = ViewBag.Mess as string;
}

<section class="normal-breadcrumb set-bg" data-setbg="img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Change Password</h2>
                    <p>Welcome to the official Anime blog.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="profile spad">
    <div class="container">
        <form asp-action="ChangePassword" asp-controller="User" id="profile-form">
            <div class="row">
                <div class="col-lg-6">
                    <div class="profile__image text-center">
                        <img src="@currentUser.ImageUser" alt="Profile Picture" id="profile-picture"
                             class="rounded-circle img-thumbnail">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="profile__info">
                        <h3>Change Password</h3>
                        @if (!string.IsNullOrEmpty(mess))
                        {
                            @if (mess!.Equals("mess1"))
                            {
                                <h4 class="text-danger my-4">Old Password is not correct !!!</h4>
                            }
                        }
                        <div class="form-group">
                            <span class="icon_lock text-white"></span>
                            <input type="password" name="password" placeholder="Password" id="password"
                                   class="form-control">
                        </div>
                        @if (!string.IsNullOrEmpty(mess))
                        {
                            @if (mess!.Equals("mess2"))
                            {
                                <h4 class="text-danger my-4">New Password and Re Password is not the same !!!</h4>
                            }
                        }
                        <div class="form-group">
                            <span class="icon_lock text-white"></span>
                            <input type="password" name="newPassword" placeholder="New Password" id="newpassword"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="icon_lock text-white"></span>
                            <input type="password" name="rePassword" placeholder="Re-enter Password" id="repassword"
                                   class="form-control">
                        </div>
                        <button type="submit" class="site-btn btn btn-primary">Change</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
