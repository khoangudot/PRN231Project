@{
    ViewData["Title"] = "List User";
}
@model IEnumerable<ObjectModel.Dtos.UserDTO>

<section class="product-page spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex text-white">
                    <div class="p-2">
                        <h3>Users List</h3>
                    </div>
                    <div class="ml-auto p-2">
                        <a asp-action="UserCreate" class="btn btn-outline-success">
                            Create New User
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-dark">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                        {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.FullName</td>
                            <td width="50"><img src="@user.ImageUser" alt="userImage" /></td>
                            <td>@user.Email</td>
                            <td>@(user.IsMale ? "Male" : "Female")</td>
                            <td width="200">
                                <a asp-action="UserEdit" asp-route-userId="@user.UserId" class="btn btn-outline-primary btn-sm">
                                    <span class="icon_pencil"></span> Edit
                                </a>
                                @if (user.IsActive)
                                {
                                    <a asp-action="UserDelete" asp-route-userId="@user.UserId" class="btn btn-outline-danger btn-sm">
                                        <span class="icon_trash"></span> Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>