@{
    ViewData["Title"] = "List Chapter";
}
@model ObjectModel.Dtos.ChapterDTO
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script>function readFile() {
